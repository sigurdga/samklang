{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "arrow-body-style": ["error", "always"],
        "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ],
        "function-paren-newline": [ 1, "multiline" ],
        "indent": [ 1, 4, {"SwitchCase": 1} ],
        "import/no-extraneous-dependencies": [ "error", { "devDependencies": ["**/*.test.js", "**/*.spec.js"] } ],
        "import/order": [ 1, {"newlines-between": "always"} ],
        "jsx-a11y/anchor-is-valid": [ 0 ],
        "max-len": 1,
        "no-param-reassign": [2, {"props": false}],
        "no-shadow": [2, {"allow": ["err"]}],
        "no-underscore-dangle": ["error", { "allow": ["_id", "_type", "__INITIAL_STATE__", "_json", "_header", "__"] }],
        "no-unused-expressions": 1,
        "no-unused-vars": [ 1, { "vars": "all", "args": "after-used", "argsIgnorePattern": "req|res|next" }],
        "prefer-const": 1,
        "quotes": [ 1, "single"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-wrap-multilines": 1,
        "react/prefer-stateless-function": 0,
        "react/sort-comp": 1,
        "react/forbid-prop-types": 0,
        "react/require-default-props": 0,
    },
}
